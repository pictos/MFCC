<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	x:Class="MFCC.Pages.ImageBehaviorPage"
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:local="clr-namespace:MFCC"
	Title="ImageBehaviorPage">
	<VerticalStackLayout VerticalOptions="Center">
		<Image x:Name="img" Source="shield.png">
			<Image.Behaviors>
				<local:TintColorBehavior TintColor="Orange" />
			</Image.Behaviors>
		</Image>
	</VerticalStackLayout>
</ContentPage>
